#!/usr/bin/env bash
ROOT=~/Services
export NAME="${@: -1}"

Down() {
	trap "$1" EXIT
}

Wait() {
	sleep infinity
}

Loop() {
	(while true; do eval "$1"; sleep $2; done) &
}

_start() {
	if [ "$1" == "--all" ]; then
		for d in $(_list --enabled); do 
			_start $d
		done

		exit 0
	fi

	if [ $(_status $NAME | grep "does not exist") ]; then
		echo "Service $NAME does not exist"
		exit 0
	fi

	cd $ROOT/$NAME > /dev/null 2>&1

	if [ $(_status $NAME | grep "Started") ]; then
		echo "Service $NAME has already been started"
		exit 0
	fi
	
	export -f Down
	export -f Wait
	export -f Loop

	if [ -f "$ROOT/$NAME/.$NAME" ]; then
		cd service

		setsid -f bash -c 'trap "rm -f /tmp/$NAME.log; kill -- -$$" EXIT; bash ../."$NAME"' > /tmp/$NAME.log 2>&1
		touch /tmp/$NAME.log

		sleep 5

	else
		cd service

		setsid -f bash -c 'trap "rm -f /tmp/$NAME.log; kill -- -$$" EXIT; bash ../"$NAME"' > /tmp/$NAME.log 2>&1 &
		touch /tmp/$NAME.log

		sleep 5
	fi
}

_stop() {

	if [ $(_status $NAME | grep "does not exist") ]; then
		echo "Service $NAME does not exist"
		exit 0
	fi

	if [ "$1" == "--all" ]; then

		for d in $(service list --running); do 
			_stop $d
		done

		exit 0
	fi
	
	PID=$(pgrep -f "^bash ../$NAME$")

	if [ -z "${PID}" ]; then
		PID=$(pgrep -f "^bash ../.$NAME$")

		if [ -z "${PID}" ]; then
			echo "Service $NAME is not running"
			exit 0
		fi
	fi
	for proc in $PID; do
		kill $proc  > /dev/null 2>&1
	done
	sleep 5

}

_log() {
	EDITOR=$EDITOR less +G +F /tmp/$NAME.log
}

_status() {

	if [ ! -f "$ROOT/$NAME/$NAME" ] && [ ! -f "$ROOT/$NAME/.$NAME" ]; then
		echo "Service $NAME does not exist"
		exit 0
	fi

	if [ -f "/tmp/$NAME.log" ]; then
    	echo "Started"
	else 
    	echo "Stopped"
    fi

    if [ -f "$ROOT/$NAME/$NAME" ]; then
    	echo "Enabled"
	else 
    	echo "Disabled"
    fi
}

_disable() {
	if [ ! -f $ROOT/$NAME/$NAME ]; then
	
		if [ ! -f $ROOT/$NAME/.$NAME ]; then
		
			echo "Service $NAME does not exist"
			exit 0
		fi
		echo "Service $NAME is not enabled"
		exit 0
	fi
	
	mv $ROOT/$NAME/$NAME $ROOT/$NAME/.$NAME

	if [ "$1" == "--now" ]; then
		_stop $NAME
	fi
}

_enable() {
	if [ $(_status $NAME | grep "does not exist") ]; then
		echo "Service $NAME does not exist"
		exit 0
	fi

	if [ $(_status $NAME | grep "Enabled") ]; then
		echo "Service $NAME is already enabled"
		exit 0
	fi

	mv $ROOT/$NAME/.$NAME $ROOT/$NAME/$NAME

	if [ "$1" == "--now" ]; then
		service start $NAME
	fi
}

_list() {
	if [ "$1" == "--all" ]; then
	
		(cd $ROOT && for d in */; do echo ${d::-1}; done)
		
	elif [ "$1" == "--enabled" ]; then
		(cd $ROOT
			for d in */; do
				if [ -f "$d${d::-1}" ]; then
					echo ${d::-1}
				fi
			done)
	elif [ "$1" == "--running" ]; then
		for d in /tmp/*.log; do
		
			d=$(echo ${d##/tmp/})
			d=$(echo ${d%%.log})

			if [ -d $ROOT/$d ]; then
				echo $d
			fi
		done
	fi
}

_edit() {

	if [ $(_status $NAME | grep "does not exist") ]; then
		echo "Service $NAME does not exist"
		exit 0
	fi

	if [ -f $ROOT/$NAME/$NAME ]; then

		$EDITOR $ROOT/$NAME/$NAME
	else
		$EDITOR $ROOT/$NAME/.$NAME
	fi
}

_restart() {
	_stop $NAME
	
	_start $NAME

	if [ "$1" == "--all" ]; then
		_stop --all
		
		_start --all

		exit 0
	fi
}

_init() {
	mkdir $ROOT/$NAME
	touch $ROOT/$NAME/.$NAME
	mkdir $ROOT/$NAME/service
}

if [[ $(type -t _"$1") == "function" ]]; then
	_"$1" "${@:2}"
else
	echo "Command $1 doesn't exist"
fi